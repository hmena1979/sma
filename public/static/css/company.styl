.container-fluid
	padding-top 0px
	padding-left 0px
	padding-right 0px

.colorprin
	color #DE1B09

.negrita
	font-weight bold

label
	font-weight bold
	margin-bottom 0px !important
	
.negrita
	font-weight: bold
	
.mtop16
	margin-top 16px

.mtop8
	margin-top 8px
	margin-left 4px
	
.mbottom10
	margin-bottom 10px

.mtop0
	margin-top 0px
	padding 0px
	
.wrapper
	min-height 100vh
	overflow hidden
	.col1
		float left
		position relative
		z-index 999
		width 17%
	.col2
		float left
		width 83%
		
.sidebar
	background-color #fff
	min-height 100vh
	.section-top
		background-color #DE1B09
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
		.logo
			display block
			margin 0px auto
			padding-top 24px
			width 70%
		.user
			color #fff !important
			padding 16px
			.name
				a 
					color #fff
					font-size 1.2em
					
	.main
		margin-top 8px
		display block
		ul
			li
				margin-bottom 4px
				margin-left 8px
				a
					color #620206 !important
					display block
					font-size 1.1em
					padding 5px 1px
					i
						margin-right 10px
					&:hover
						background-color #DE1B09
						box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
						color #fff !important
						text-decoration none
				ul
					li
						a
							color #8998AC !important
							font-size 1em

.navbar	
	background-color #DE1B09
	a
		color #fff !important

.page
	padding-top 16px
	padding-bottom 16px
	.breadcrumb
		background-color #fff		
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
		.breadcrumb-item
			a
				color #DE1B09 !important
				&:hover
					color #620206 !important
					text-decoration none
.panel
	background-color #fff
	border-radius 6px
	border-bottom 2px solid #DE1B09
	width 100%
	.header
		border-bottom 1px solid #e8e8e8
		h2.title
			display inline-block
			color #A90100
			font-size 1.1em
			padding 12px 16px
		ul
			display inline-block
			float right
			margin-right 12px
			margin-top 0px
			margin-bottom 0px
			li
				display inline-block
				position relative
				a
					color #fff
					background-color colorprin
					height 37px
					line-height: 15px
					display inline-block
					padding 10px
					border-radius 5px
					margin-top 8px
					&:hover
						color #fff
						background-color colorsec
						text-decoration none
					i
						color #fff
				input
					// color #fff
					background-color #fff
					height 35px
					line-height: 15px
					display inline-block
					padding 10px
					border-radius 5px
					margin-top 0px
					&:hover
						color #000
						background-color #fff
						text-decoration none
					i
						color #fff
				ul
					background-color #fff
					border 1px solid #f0f0f0
					display none
					float none
					position absolute
					top -60px
					right -16px
					width 150px
					li
						display inline-block
						border-bottom 1px solid #f0f0f0
						width 100%
						&:last-child
							border-bottom 0px
						a
							display inline-block
							width 100%
				&:hover
					ul
						display block
			

	.inside
		padding 16px				
			
.opts
	a
		border-radius 4px
		border 1px solid #dedede
		display inline-block
		padding 3px 5px
		color #DE1B09
		&:hover
			color #620206 !important

.sed_galeria
	overflow hidden
	.btn-submit
		display block
		margin-right 1%
		width 100%
		a
			color #A90100
			border 1px dashed #6666
			border-radius 4px
			display block
			font-size 1.5em
			text-align center
			padding 12px
			with 100%
			&:hover
				background-color #A90100
				color #fff
	.tumbs
		overflow hidden
		.tumb
			float left
			margin-top 16px
			position relative
			width 48%
			a
				background-color rgba(0,0,0, .5)
				color #fff
				border-radius 50%
				padding 6px 10px
				display inline-block
				position absolute
				bottom 8px
				right 8px
				&:hover
					color #A90100 !important
			img
				border-radius 4px
				width 100%				
			&:nth-child(odd)
				margin-right 4%

.btn-sma
	width 100%
	background-color #B71415 !important
	color #fff !important
	border 0px
	&:hover
		background-color #B15814  !important

.table-estrecha
	tr
		td,th
			padding 0.4rem

.form-group
	margin-bottom 8px