.pageprin
	padding-left 0px
	padding-top 8px
	padding-bottom 0px
	.breadcrumb
		background-color #fff
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
		.breadcrumb-item
			a
				color colorprin !important
				&:hover
					color colorosc !important
