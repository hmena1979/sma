.panelprin
	background-color #fff
	border-radius 6px
	border-bottom 2px solid colorprin
	margin-top -8px
	width 100%
	.headercontent
		border-bottom 1px solid #e8e8e8
		h2.title
			display inline-block
			color colorprin
			font-size 1.1em
			padding 12px 16px
			// margin-top 1px
		ul
			display inline-block
			float right
			margin-right 12px
			margin-top 0px
			margin-bottom 0px
			li
				display inline-block
				position relative
				a
					color #fff
					background-color colorprin
					height 37px
					line-height: 15px
					display inline-block
					padding 10px
					border-radius 5px
					margin-top 8px
					&:hover
						color #fff
						background-color colorsec
						text-decoration none
					i
						color #fff
				input
					// color #fff
					background-color #fff
					height 35px
					line-height: 15px
					display inline-block
					padding 10px
					border-radius 5px
					margin-top 0px
					&:hover
						color #000
						background-color #fff
						text-decoration none
					i
						color #fff
				ul
					background-color #fff
					border 1px solid #f0f0f0
					display none
					float none
					position absolute
					top -60px
					right -16px
					width 150px
					li
						display inline-block
						border-bottom 1px solid #f0f0f0
						width 100%
						&:last-child
							border-bottom 0px
						a
							display inline-block
							width 100%
				&:hover
					ul
						display block
	.inside
		padding 16px

